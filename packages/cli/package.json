{
  "name": "@malloydata/publisher-cli",
  "version": "0.0.1",
  "description": "CLI for Malloy Publisher - Manage projects, packages, and connections",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "malloy-pub": "./dist/index.js"
  },
  "scripts": {
    "generate-api-types": "bunx openapi-generator-cli generate -i ../../api-doc.yaml -g typescript-axios -o src/api/generated --additional-properties=supportsES6=true,withSeparateModelsAndApi=true,apiPackage=api,modelPackage=models,stringEnums=true",
    "prebuild": "bun run generate-api-types",
    "build": "bun build src/index.ts --outdir dist --target node --format esm && chmod +x dist/index.js",
    "dev": "bun run src/index.ts --",
    "lint": "bunx eslint ./src --fix",
    "format": "bunx prettier --write --parser typescript 'src/**/*.{ts,tsx}'",
    "typecheck": "bun run tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "fs-extra": "^11.3.3"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.20.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.0.0",
    "typescript": "^5.3.3"
  }
}