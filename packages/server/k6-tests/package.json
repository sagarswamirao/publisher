{
  "name": "k6-tests",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/k6": "^1.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@grafana/openapi-to-k6": "^0.3.2",
    "k6": "^0.0.0"
  },
  "scripts": {
    "build": "tsc",
    "smoke-test": "k6 run smoke-test.ts",
    "breakpoint-test": "k6 run breakpoint-test.ts",
    "stress-test": "k6 run stress-test.ts",
    "soak-test": "k6 run soak-test.ts",
    "spike-test": "k6 run spike-test.ts",
    "load-test": "bun run load-test-projects && bun run load-test-connections && bun run load-test-packages",
    "load-test-connections": "k6 run load-test-connections.ts",
    "load-test-projects": "k6 run load-test-projects.ts",
    "load-test-packages": "k6 run load-test-packages.ts",
    "all-tests": "bun run smoke-test && bun run load-test && bun run spike-test && bun run stress-test && bun run breakpoint-test && bun run soak-test",
    "generate-clients": "openapi-to-k6 ../../../api-doc.yaml ./clients --mode tags --disable-analytics --verbose",
    "clean": "rm -rf ./node_modules && rm -rf ./clients && rm -rf ./results"
  }
}
